{
  "designSystem": {
    "name": "Analytics Dashboard Design System",
    "version": "1.0.0",
    "description": "Modern data analytics platform design system with vibrant gradients and clean interface elements",
    
    "colorPalette": {
      "primary": {
        "purple": "#8B5CF6",
        "purpleLight": "#A78BFA",
        "purpleDark": "#7C3AED",
        "vibrantPurple": "#9333EA"
      },
      "secondary": {
        "blue": "#3B82F6",
        "blueDark": "#1E40AF",
        "blueLight": "#60A5FA"
      },
      "neutrals": {
        "white": "#FFFFFF",
        "gray50": "#F9FAFB",
        "gray100": "#F3F4F6",
        "gray200": "#E5E7EB",
        "gray300": "#D1D5DB",
        "gray400": "#9CA3AF",
        "gray500": "#6B7280",
        "gray600": "#4B5563",
        "gray700": "#374151",
        "gray800": "#1F2937",
        "gray900": "#111827"
      },
      "accents": {
        "success": "#10B981",
        "warning": "#F59E0B",
        "error": "#EF4444",
        "info": "#3B82F6"
      }
    },

    "gradients": {
      "primary": "linear-gradient(135deg, #8B5CF6 0%, #3B82F6 100%)",
      "heroBackground": "linear-gradient(135deg, #1E40AF 0%, #7C3AED 50%, #8B5CF6 100%)",
      "cardOverlay": "linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(59, 130, 246, 0.1) 100%)",
      "buttonPrimary": "linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%)",
      "testimonialSection": "linear-gradient(135deg, #9333EA 0%, #7C3AED 100%)"
    },

    "typography": {
      "fontFamilies": {
        "primary": "Inter, system-ui, -apple-system, sans-serif",
        "secondary": "SF Pro Display, system-ui, sans-serif"
      },
      "fontSizes": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem",
        "6xl": "3.75rem"
      },
      "fontWeights": {
        "light": 300,
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "extrabold": 800
      },
      "lineHeights": {
        "tight": 1.25,
        "normal": 1.5,
        "relaxed": 1.75
      }
    },

    "spacing": {
      "base": "0.27rem",
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "2.5rem",
      "3xl": "3rem",
      "4xl": "4rem",
      "5xl": "5rem",
      "6xl": "6rem"
    },

    "borderRadius": {
      "none": "0",
      "sm": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "2xl": "1rem",
      "3xl": "1.5rem",
      "full": "9999px"
    },

    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
      "card": "0 4px 12px rgba(139, 92, 246, 0.15)",
      "glow": "0 0 20px rgba(139, 92, 246, 0.3)"
    },

    "components": {
      "navigation": {
        "structure": "Horizontal top navigation with logo on left, menu items centered/right",
        "styling": {
          "background": "rgba(255, 255, 255, 0.95)",
          "backdropBlur": "blur(10px)",
          "padding": "1rem 2rem",
          "borderBottom": "1px solid rgba(229, 231, 235, 0.3)"
        },
        "logo": {
          "type": "Text-based with icon",
          "styling": "Bold font, primary purple color"
        },
        "menuItems": {
          "styling": "Medium font weight, gray-600 color, hover purple transition",
          "spacing": "2rem between items"
        }
      },

      "heroSection": {
        "layout": "Full-width with gradient background, centered content",
        "styling": {
          "background": "Gradient from blue to purple",
          "minHeight": "80vh",
          "textAlign": "center",
          "padding": "4rem 2rem"
        },
        "title": {
          "fontSize": "4xl to 6xl",
          "fontWeight": "bold",
          "color": "white",
          "maxWidth": "4xl"
        },
        "subtitle": {
          "fontSize": "lg to xl",
          "color": "rgba(255, 255, 255, 0.8)",
          "marginTop": "1rem"
        },
        "cta": {
          "type": "Primary button",
          "marginTop": "2rem"
        },
        "decorativeElements": "Abstract geometric shapes, data visualization previews"
      },

      "buttons": {
        "primary": {
          "background": "Primary gradient",
          "color": "white",
          "padding": "0.75rem 2rem",
          "borderRadius": "xl",
          "fontWeight": "semibold",
          "shadow": "lg",
          "hoverEffect": "Scale and shadow increase"
        },
        "secondary": {
          "background": "transparent",
          "border": "2px solid current color",
          "color": "primary purple",
          "padding": "0.75rem 2rem",
          "borderRadius": "xl",
          "fontWeight": "semibold"
        }
      },

      "cards": {
        "default": {
          "background": "white",
          "borderRadius": "2xl",
          "padding": "2rem",
          "shadow": "card shadow",
          "border": "1px solid gray-200"
        },
        "feature": {
          "background": "white",
          "borderRadius": "2xl",
          "padding": "2rem to 3rem",
          "shadow": "lg",
          "hoverEffect": "Lift and glow shadow"
        },
        "dashboard": {
          "background": "white",
          "borderRadius": "xl",
          "padding": "1.5rem",
          "shadow": "md",
          "minHeight": "300px"
        }
      },

      "dataVisualization": {
        "charts": {
          "primaryColor": "#8B5CF6",
          "secondaryColor": "#3B82F6",
          "accentColor": "#10B981",
          "gridColor": "rgba(107, 114, 128, 0.2)",
          "backgroundColor": "white"
        },
        "gauges": {
          "activeColor": "#8B5CF6",
          "inactiveColor": "#E5E7EB",
          "strokeWidth": "8px"
        },
        "progress": {
          "trackColor": "#F3F4F6",
          "fillColor": "Primary gradient",
          "height": "8px",
          "borderRadius": "full"
        }
      },

      "forms": {
        "container": {
          "background": "white",
          "borderRadius": "2xl",
          "padding": "2rem",
          "shadow": "xl"
        },
        "inputs": {
          "borderColor": "#D1D5DB",
          "focusBorderColor": "#8B5CF6",
          "borderRadius": "lg",
          "padding": "0.75rem 1rem",
          "fontSize": "base"
        },
        "labels": {
          "fontSize": "sm",
          "fontWeight": "medium",
          "color": "#374151",
          "marginBottom": "0.5rem"
        }
      },

      "testimonials": {
        "section": {
          "background": "Primary gradient",
          "color": "white",
          "padding": "4rem 2rem",
          "textAlign": "center"
        },
        "quote": {
          "fontSize": "2xl to 3xl",
          "fontWeight": "medium",
          "marginBottom": "2rem"
        },
        "logos": {
          "layout": "Grid or flex layout",
          "filter": "brightness(0) invert(1) opacity(70%)",
          "spacing": "2rem between items"
        }
      }
    },

    "layoutPatterns": {
      "containerMaxWidth": "1280px",
      "sectionPadding": "4rem 0",
      "gridGap": "2rem",
      "responsiveBreakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
      }
    },

    "animations": {
      "hover": {
        "duration": "300ms",
        "easing": "cubic-bezier(0.4, 0, 0.2, 1)",
        "properties": ["transform", "box-shadow", "opacity"]
      },
      "fadeIn": {
        "duration": "600ms",
        "easing": "ease-out",
        "delay": "100ms increments for staggered effects"
      },
      "slideUp": {
        "duration": "500ms",
        "easing": "cubic-bezier(0.4, 0, 0.2, 1)",
        "transform": "translateY(20px) to translateY(0)"
      }
    },

    "designPrinciples": {
      "colorUsage": "Primary purple/blue gradient for key actions and accents, clean white backgrounds, subtle gray for text hierarchy",
      "spacing": "Generous whitespace, consistent grid system, visual breathing room",
      "typography": "Clear hierarchy with varying font weights, readable line heights",
      "imagery": "Abstract data visualization elements, geometric shapes, clean iconography",
      "interaction": "Smooth hover effects, subtle animations, clear focus states",
      "accessibility": "High contrast ratios, semantic HTML structure, keyboard navigation support"
    },

    "componentVariants": {
      "dashboard": "Clean cards with data visualizations, minimal borders, focus on content",
      "landing": "Bold gradients, large typography, compelling CTAs, social proof",
      "forms": "Clean inputs, clear labels, progressive disclosure, validation states",
      "navigation": "Sticky header, smooth scrolling, mobile-responsive hamburger menu"
    }
  }
}